@model PMANews.Areas.Identity.Data.Post
@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="container justify-content-md-center text-center col-md-6">
    <div class="card border-danger">
        <div class="card-header">
            <form asp-action="Delete">
                <input type="hidden" asp-for="Id" />
                <input type="submit" value="Obriši" class="btn btn-danger" />
                <a asp-controller="Posts" asp-action="Details" asp-route-id="@Model.Id" class="btn btn-secondary">Odustani</a>
            </form>
        </div>
        <div class="card-body">
            <h4 class="card-title">Sigurno želite obrisati ovu objavu?</h4>
        </div>
    </div>
</div>