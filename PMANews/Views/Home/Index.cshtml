@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container justify-content-center">
    <div class="container justify-content-center text-center">
        <img src="~/img/logo.png" asp-append-version="true" class="pmfImg">
    </div>
    <br /><br />
    <div class="card-columns" style="text-align:center;">
        <div class="card card-inf">
            <div class="card-body">
                <a asp-controller="Department" asp-action="Courses" asp-route-id="1" style="text-decoration:none;color:white;"> INFORMATIKA </a>
            </div>
        </div>

        <div class="card card-pol">
            <div class="card-body">
                <a asp-controller="Department" asp-action="Courses" asp-route-id="4" style="text-decoration:none;color:white;"> POLITEHNIKA </a>
            </div>
        </div>

        <div class="card card-kem">
            <div class="card-body">
                <a asp-controller="Department" asp-action="Courses" asp-route-id="6" style="text-decoration:none;color:white;"> KEMIJA </a>
            </div>
        </div>

        <div class="card card-mat">
            <div class="card-body">
                <a asp-controller="Department" asp-action="Courses" asp-route-id="2" style="text-decoration:none;color:white;"> MATEMATIKA </a>
            </div>
        </div>

        <div class="card card-bio">
            <div class="card-body">
                <a asp-controller="Department" asp-action="Courses" asp-route-id="5" style="text-decoration:none;color:white;"> BIOLOGIJA </a>
            </div>
        </div>

        <div class="card card-fiz">
            <div class="card-body">
                <a asp-controller="Department" asp-action="Courses" asp-route-id="3" style="text-decoration:none;color:white;"> FIZIKA </a>
            </div>
        </div>

    </div>
</div>

<style>
    .pmfImg {
        height: 300px;
        width: 300px;
    }

    .card-inf div:hover {
        color: #fff;
        background-color: rgb(127, 116, 152);
    }

    .card-pol div:hover {
        color: #fff;
        background-color: rgb(117, 80, 65);
    }

    .card-mat div:hover {
        color: #fff;
        background-color: rgb(251, 176, 64);
    }

    .card-fiz div:hover {
        color: #fff;
        background-color: rgb(28, 117, 188);
    }

    .card-bio div:hover {
        color: #fff;
        background-color: rgb(0, 148, 68);
    }

    .card-kem div:hover {
        color: #fff;
        background-color: rgb(181, 30, 123);
    }

</style>