@model IEnumerable<PMANews.Areas.Identity.Data.Course>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container justify-content-md-center text-left col-sm-8">
    <table class="table table-hover">
        <thead>
            <tr>
                <th class="text-success">Kolegiji odjela @ViewBag.departmentName
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        <a class="nav-link text-light" asp-controller="CoursePageModels" asp-action="CoursePageModels" asp-route-id="@item.Id"> @Html.DisplayFor(modelItem => item.Name) </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
