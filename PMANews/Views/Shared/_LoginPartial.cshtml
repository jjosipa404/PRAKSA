@using Microsoft.AspNetCore.Identity
@using PMANews.Areas.Identity.Data
@using System.Security.Claims;

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager


@if (SignInManager.IsSignedIn(User))
{
    <li class="nav-item">
        <a class="nav-link text-light" asp-controller="Course" asp-action="MyCourses"> Moji kolegiji </a>
    </li>
    <li class="nav-item">
        <a id="manage" class="nav-link text-light" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage"> &commat;@User.Identity.Name </a>
    </li>
    <li class="nav-item">
        <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
            <button id="logout" type="submit" class="nav-link btn btn-link text-light">Odjava</button>
        </form>
    </li>
}
else
{

    <li class="nav-item">
        <a class="nav-link btn-success" style="color:white;" href="/Identity/Account/RegisterStudent">Registracija&nbsp;<span class="sr-only">(current)</span></a>
    </li>
    <li class="nav-item">
        <a class="nav-link text-light" href="/Identity/Account/Login">Prijava</a>
    </li>
}

