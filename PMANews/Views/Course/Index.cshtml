@model IEnumerable<PMANews.Areas.Identity.Data.Course>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

    <div class="container justify-content-md-center text-left col-sm-8">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>
                        Popis svih kolegija PMF-a
                    </th>
                    <th>
                        Odjel
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            <a asp-controller="CoursePageModels" asp-action="CoursePageModels" asp-route-id="@item.Id" class="text-decoration-none text-light"> @Html.DisplayFor(modelItem => item.Name) </a>
                        </td>
                        <td>
                            <a asp-controller="Department" asp-action="Courses" asp-route-id="@item.DepartmentId" class="text-decoration-none text-light"> @Html.DisplayFor(modelItem => item.Department.Name) </a>
                        </td>
                        <td>
                            <a asp-controller="Course" asp-action="Delete" asp-route-id="@item.Id" class="text-decoration-none text-light">Izbriši kolegij</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        </div>
        <br />
        <br />
        <br />
        <br />
        <br />
        <br />
